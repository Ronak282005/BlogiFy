<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>BlogiFy</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <%= JSON.stringify(user) %>

    <div class="container mt-3">

        <% blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImage %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text"><%= blog.body %></p>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read Blog</a>
                </div>
              </div>
        <% }) %>

    </div>


    <%- include("./partials/script.js") %>
</body>
</html>